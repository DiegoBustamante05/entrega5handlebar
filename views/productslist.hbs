<h1 class="text-center">Listado de productos</h1>
<div class="container">
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Price</th>
            <th scope="col">Handle</th>
        </tr>
    </thead>
    <tbody>
        {{#if productsExist}}
            {{#each products}}
            <tr>
                <th scope="row">{{this.id}}</th>
                <td>{{this.title}}</td>
                <td>{{this.price}}</td>
                <td><img src="{{this.thumbnail}}" class="product-img"/></td>
            </tr>    
            {{/each}}
        {{/if}}
    </tbody>
</table>
</div>
